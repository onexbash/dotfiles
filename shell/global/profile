# -- -- -- -- -- -- -- -- -- -- -- #
# --    GLOBAL SHELL PROFILE    -- #
# -- -- -- -- -- -- -- -- -- -- -- #
# --        /etc/profile        -- #
# -- -- -- -- -- -- -- -- -- -- -- #
if [ "$SHELL" == *"bash"* ]; then
	[ -r "/etc/bashrc" ] && source "/etc/bashrc" || echo "!!! '/etc/bashrc' not found !!!"
fi

